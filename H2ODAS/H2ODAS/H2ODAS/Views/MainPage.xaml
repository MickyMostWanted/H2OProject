<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="H2ODAS.Views.MainPage" BackgroundColor="Aqua"
             >

    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
      
            <Label Text="Welcome to" HorizontalOptions="Center" FontSize="30" TextColor="Black" />
            <Label Text="ABRAHAMS" FontSize="50" HorizontalOptions="Center" FontAttributes="Italic" TextColor="Black"/>
            <Label Text="TRANSPORT" FontSize="50" HorizontalOptions="Center" FontAttributes="Italic" TextColor="Black"/>
            <Label Text="SERVICES" FontSize="50" HorizontalOptions="Center" FontAttributes="Italic" TextColor="Black"/>
            <Label Text="Water Delivery" FontSize="50" HorizontalOptions="Center" FontAttributes="Bold" TextColor="Black"/>
            <Label Text="AND" FontSize="30" HorizontalOptions="Center" TextColor="Black"/>
            <Label Text="Sustainability" FontSize="50" FontAttributes="Bold" HorizontalOptions="Center" TextColor="Black"/>
            <Label Text="APP" FontSize="30" HorizontalOptions="Center" TextColor="Black"/>

        <Button Text="Login" Command="{Binding LoginCommand}" BackgroundColor="Gray" TextColor="White" FontSize="20"/>
        <Button Text="Sign Up" Command="{Binding SignUpCommand}" BackgroundColor="Gray" TextColor="White" FontSize="20"/>
    </StackLayout>

</ContentPage>